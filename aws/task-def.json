{
  "family": "next-cicd",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::914194816312:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::914194816312:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "cicd",
      "image": "914194816312.dkr.ecr.us-east-2.amazonaws.com/next-cicd:latest",
      "essential": true,
      "cpu": 0,
      "portMappings": [
        {
          "name": "cicd-3000-tcp",
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/next-cicd",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:us-east-2:914194816312:parameter/next/db/cicd"
        },
        {
          "name": "NEXT_PUBLIC_SECRET_WORD",
          "valueFrom": "arn:aws:ssm:us-east-2:914194816312:parameter/next/db/secret"
        }
      ]
    }
  ]
}
